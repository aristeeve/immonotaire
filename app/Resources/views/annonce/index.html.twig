{% extends 'base.html.twig' %}

{% block body %}
    <h1>Annonces list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Region</th>
                <th>Ville</th>
                <th>Commune</th>
                <th>Telmobile</th>
                <th>Telfixe</th>
                <th>Prix</th>
                <th>Disponibilite</th>
                <th>Modifiele</th>
                <th>Active</th>
                <th>Affiche_contact</th>
                <th>Creele</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td><a href="{{ path('annonce_show', { 'id': annonce.id }) }}">{{ annonce.id }}</a></td>
                <td>{{ annonce.titre }}</td>
                <td>{{ annonce.description }}</td>
                <td>{{ annonce.region }}</td>
                <td>{{ annonce.ville }}</td>
                <td>{{ annonce.commune }}</td>
                <td>{{ annonce.telMobile }}</td>
                <td>{{ annonce.telFixe }}</td>
                <td>{{ annonce.prix }}</td>
                <td>{{ annonce.disponibilite }}</td>
                <td>{{ annonce.modifieLe }}</td>
                <td>{% if annonce.active %}Yes{% else %}No{% endif %}</td>
                <td>{% if annonce.affichecontact %}Yes{% else %}No{% endif %}</td>
                <td>{{ annonce.creeLe }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('annonce_show', { 'id': annonce.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('annonce_edit', { 'id': annonce.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('annonce_new') }}">Create a new annonce</a>
        </li>
    </ul>
{% endblock %}
