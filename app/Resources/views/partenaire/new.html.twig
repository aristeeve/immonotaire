{%extends 'baseAdmin.html.twig'%}
{%block js%}
    <script type="text/javascript" src="{{asset('admin/js/plugins/tables/datatables/datatables.min.js')}}"></script>
    <script type="text/javascript" src="{{asset('admin/js/plugins/forms/selects/select2.min.js')}}"></script>

    <script type="text/javascript" src="{{asset('admin/js/core/app.js')}}"></script>
    <script type="text/javascript" src="{{asset('admin/js/pages/datatables_basic.js')}}"></script>
{%endblock%}

{%block header%}
    <!-- Page header -->
    <div class="page-header page-header-default">
        <div class="page-header-content">
            <div class="page-title">
                <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Accueil</span> - Listes des notifications</h4>
            </div>
        </div>

        <div class="breadcrumb-line">
            <ul class="breadcrumb">
                <li><a href="{{path('immo_admin_homepage')}}"><i class="icon-home2 position-left"></i> Accueil</a></li>
                <li><a href="{{path('list-partenaire')}}">Liste des partenaires</a></li>
                <li class="active">Nouveau partenaire</li>
            </ul>
        </div>
    </div>
{%endblock%}
{% block body %}
   <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <div class="panel panel-flat">
                <div class="bg-purple-400" style="padding: 10px;">
                    <h3 class="panel-title "><i class="fa fa-user"></i> Nouveau partenaire
                </div>
                {{ form_start(form) }}
                <div class="panel-body">
                    <div class="form-group">
                        <label>{{ form_label(form.name) }}</label>
                        {{form_widget(form.name,{'attr':{'class':'form-control'}})}}
                        <b class="text-danger">{{ form_errors(form.name) }}</b>
                    </div>

                    <div class="form-group">
                        <label>{{ form_label(form.domaine) }}</label>
                        {{form_widget(form.domaine,{'attr':{'class':'form-control'}})}}
                        <b class="text-danger">{{ form_errors(form.domaine) }}</b>
                    </div>

                    <div class="form-group">
                        <label>{{ form_label(form.logo) }}</label>
                        {{form_widget(form.logo)}}
                        <b class="text-danger">{{ form_errors(form.logo) }}</b>
                    </div>
                   
                    {{form_rest(form)}}

                    <div class="text-right">
                        <button type="submit" class="btn btn-primary">Enregistrer <i class="icon-arrow-right14 position-right"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{%endblock%}