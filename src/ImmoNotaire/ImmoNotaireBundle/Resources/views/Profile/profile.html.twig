{% extends 'base.html.twig' %}
{%block title%}
Page de profil
{%endblock%}
{% block body %}
    <div class="wrapper" style="margin-top: 15px;">
        <ul class="breadcrumb">
            <li><a href="#">Accueil</a> <span class="divider">/</span></li>
            <li><a href="#">Compte</a> <span class="divider">/</span></li>
            <li class="active">Profil</li>
        </ul>


        <div class="row">
            <div class="span3" style="background-color: #fff;">
                <div class="nav">
                    <div class="content">
                        <ul class="nav nav-list">
                            <li class="nav-header">MON COMPTE</li>
                            <li class="active"><a href="#">Profil</a></li>
                            <li><a href="{{path('immo_notaire_changePassword')}}" style="color: #333">Modifier le mot de passe</a></li>
                            <li><a href="{{ path('immo_notaire_self_annonce_archive') }}" style="color: #333">Annonces</a> </li>

                        </ul>
                    </div><!-- /.content -->
                </div>
            </div><!-- /.span3 -->
            <div class="span9" style="background-color: #fff;padding-top:10px;padding-bottom:10px;">
                <div class="content"  style="padding:20px; padding-top: 0px;">
                    <ul class="tabs nav nav-tabs" id="myTab"  style="border-left: 1px solid #ddd;">
                        <li class=""><a href="#profile">Profil</a></li>
                        <li><a href="#editprofile">Modifier le Profil</a></li>
                    </ul>
                    <div class="tab-content"  style="border: 1px solid #ddd;">
                        {% if app.session.flashBag.has('success') %}
                            <div class="alert alert-success">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                {% for msg in app.session.flashBag.get('success') %}
                                    {{ msg }}
                                {% endfor %}
                            </div>
                        {% endif %}
                        <div class="tab-pane active" id="profile">
                            <table id="example1" class="table table-bordered table-striped">
                                <tbody>
                                    <tr>
                                        <th>Nom d'utilisateur</th>
                                        <td>{{ user.username }}</td>
                                    </tr>
                                    <tr>
                                        <th>Nom</th>
                                        <td>{{ user.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Prenom</th>
                                        <td>{{ user.firstname }}</td>
                                    </tr>
                                    <tr>
                                        <th>Etude de Maitre</th>
                                        <td>{{ user.etude }}</td>
                                    </tr>
                                    <tr>
                                        <th>Ville</th>
                                        <td>{{ user.ville }}</td>
                                    </tr>
                                    <tr>
                                        <th>Siège</th>
                                        <td>{{ user.siege }}</td>
                                    </tr>
                                    <tr>
                                        <th>Personne à contacter</th>
                                        <td>{{ user.personneAContacter }}</td>
                                    </tr>
                                    <tr>
                                        <th>Email</th>
                                        <td>{{ user.email }}</td>
                                    </tr>
                                    <tr>
                                        <th>Portable</th>
                                        <td>{{ user.contact }}</td>
                                    </tr>
                                    <tr>
                                        <th>Téléphone</th>
                                        <td>{{ user.telephone }}</td>
                                    </tr>
                                    <tr>
                                        <th>Telecopie</th>
                                        <td>{{ user.telecopie }}</td>
                                    </tr>
                            </table>
                        </div>
                        <div class="tab-pane" id="editprofile">
                            <form action="{{ path('immo_notaire_profil') }}" method="POST" class="form-horizontal fos_user_profile_edit">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="span2">{{ form_label(form.username) }}</div>
                                        <div class="span3">{{ form_widget(form.username) }}</div>
                                        <div class="span3 fg-red">{{ form_errors(form.username) }}</div>
                                    </div>
                                    <div class="row">
                                        <div class="span2">{{ form_label(form.name) }}</div>
                                        <div class="span3">{{ form_widget(form.name) }}</div>
                                        <div class="span3 fg-red">{{ form_errors(form.name) }}</div>
                                    </div>
                                    <div class="row">
                                        <div class="span2">{{ form_label(form.firstname) }}</div>
                                        <div class="span3">{{ form_widget(form.firstname) }}</div>
                                        <div class="span3 fg-red">{{ form_errors(form.firstname) }}</div>
                                    </div>
                                    <div class="row ">
                                        <div class="span2">{{ form_label(form.etude) }}</div>
                                        <div class="span3">{{ form_widget(form.etude) }}</div>
                                        <div class="span3 fg-red">{{ form_errors(form.etude) }}</div>
                                    </div>
                                     <div class="row">
                                        <div class="span2">{{ form_label(form.ville) }}</div>
                                        <div class="span3">{{ form_widget(form.ville) }}</div>
                                        <div class="span3 fg-red">{{ form_errors(form.ville) }}</div>
                                    </div>
                                    <div class="row">
                                        <div class="span2">{{ form_label(form.siege) }}</div>
                                        <div class="span3">{{ form_widget(form.siege) }}</div>
                                        <div class="span3 fg-red">{{ form_errors(form.siege) }}</div>
                                    </div>

                                    <div class="row">
                                        <div class="span2">{{ form_label(form.personneAContacter) }}</div>
                                        <div class="span3">{{ form_widget(form.personneAContacter) }}</div>
                                        <div class="span3 fg-red">{{ form_errors(form.personneAContacter) }}</div>
                                    </div>
                                    <div class="row">
                                        <div class="span2">{{ form_label(form.contact) }}</div>
                                        <div class="span3">{{ form_widget(form.contact) }}</div>
                                        <div class="span3 fg-red">{{ form_errors(form.contact) }}</div>
                                    </div>
                                    <div class="row">
                                        <div class="span2">{{ form_label(form.telephone) }}</div>
                                        <div class="span3">{{ form_widget(form.telephone) }}</div>
                                        <div class="span3 fg-red">{{ form_errors(form.telephone) }}</div>
                                    </div>
                                    <div class="row">
                                        <div class="span2">{{ form_label(form.telecopie) }}</div>
                                        <div class="span3">{{ form_widget(form.telecopie) }}</div>
                                        <div class="span3 fg-red">{{ form_errors(form.telecopie) }}</div>
                                    </div>
                                    <div class="row">
                                        <div class="span2">{{ form_label(form.email) }}</div>
                                        <div class="span3">{{ form_widget(form.email) }}</div>
                                        <div class="span3 fg-red">{{ form_errors(form.email) }}</div>
                                    </div>
                                    <div class="row">
                                        <div class="span2">{{ form_label(form.current_password) }}</div>
                                        <div class="span3">{{ form_widget(form.current_password) }}
                                            <span class="fg-red" style="font-size: 12px;"><i>Veuillez entrer le mot de passe pour valider les modifications</i></span>
                                        </div>
                                        <div class="span3 fg-red">{{ form_errors(form.current_password) }}</div>
                                    </div>

                                    {{ form_rest(form) }}


                                    <div class="span5 offset2 margin-top-10">
                                        <div class="form-group">
                                            <div class="">
                                                <button type="submit" class="btn btn-success">Mettre le profil à Jour</button>
                                            </div>
                                        </div>
                                    </div>                            
                                </div>
                            </form>    
                        </div>
                    </div>
                </div><!-- /.content -->
            </div><!-- /.images -->
        </div><!-- /.row -->
    </div><!-- /.wrapper -->
{% endblock %}
